{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "vite build"
  },
  
  "dependencies": {
    "cloudinary": "^1.41.3",
    "dotenv": "^16.5.0",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0"
  },
  "devDependencies": {
    "vite": "^6.3.5"
  }
}